<%= form_with(model: @user) do |f| %>

<%= f.label :username %>
<%= f.text_field :username, placeholder: "3 to 15 characters" %>


<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password, placeholder: "8 - 10 characters" %>

<%= f.submit "Create" %>
<% end %>